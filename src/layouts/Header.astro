---
import styles from "../styles/Header.module.css";
---

<header class={styles.header}>
    <div class={styles.headerContent}>
        <a href={`${import.meta.env.BASE_URL}`} class={styles.headerLeft}>
            <div class={styles.logo}>
                <span class={styles.logoText}>HH</span>
            </div>
            <h1 class={styles.headerTitle}>Horion Hub</h1>
        </a>
        <div id="header-center" class={styles.headerCenterSlot}>
            <!-- Dynamic heading content mounts here via portal -->
        </div>
        <div class={styles.headerRight}>
            <div class={styles.avatar}>JD</div>
        </div>
    </div>
</header>